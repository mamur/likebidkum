<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginTop="56dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/edtNamaPendapatHukum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/edtPangkatHukum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtNamaPendapatHukum"
            android:layout_marginBottom="10dp"
            android:hint="Jabatan" />

        <Spinner
            android:id="@+id/listPerkara"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/list_perkara"
            android:layout_below="@+id/edtPangkatHukum"
            android:layout_marginBottom="10dp"
            android:hint="Tujuan Pendampingan" />

    </LinearLayout>

</FrameLayout>